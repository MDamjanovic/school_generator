<br><br>
<div class = "container-fluid">
	<div class = "row">
		<!-- school data -->
		<div class = "col-sm-6 col-md-5 col-lg-6">
			<strong> Name: </strong>
			<%= @school.name %>
			<br><br>
			<!-- display button generate or schedule students -->
			<% if !@school.has_students? %>
				<%= button_to "generate students", { :action => 'generate_students', :id => @school.id }, { :class => 'btn btn-success'} %>

			<% elsif !@school.students_are_scheduled? %>
				<%= button_to 'schedule students', { :action => 'schedule_students', :id => @school.id }, { :class => 'btn btn-success'} %>
			<% end %>
			<!--                                              -->
			<br>
			<strong> Number of departments: </strong>
			<%= @school.number_of_departments %>	
			<br><br>

			<%= link_to 'Edit', edit_school_path(@school) %>&nbsp&nbsp|&nbsp
			<%= link_to "Delete", school_path(@school), method: :delete, data: { confirm: 'Are you sure you want to delete school?' }%>
		</div>

		<!-- students -->
		<% if @school.has_students? %>
			<div class = "col-sm-5 col-md-6 pull-left">
				<%= render 'students' %>     	
			</div>
		<% end %>
	</div>
</div>	
